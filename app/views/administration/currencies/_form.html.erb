<%= form_for(@currency) do |f| %>
  <%= render "administration/form_errors", resource: @currency %>

  <table>
    <tr>
      <th><%= f.label :nimi, t('Valuutta') %></th>
      <td><%= f.text_field :nimi %></td>
    </tr>
    <tr>
      <th><%= f.label :jarjestys, t('Järjestys') %></th>
      <td><%= f.text_field :jarjestys %></td>
    </tr>
    <tr>
      <th><%= f.label :kurssi, t('Valuuttakurssi') %></th>
      <td><%= f.text_field :kurssi %></td>
    </tr>
    <% if @current_company.maa == "EE" %>
      <tr>
        <th><%= f.label :intrastat_kurssi, t('Intrastat-kurssi') %></th>
        <td><%= f.text_field :intrastat_kurssi %></td>
      </tr>
    <% end %>
    <tr>
      <th><%= t('Laatija') %></th>
      <td><%= @currency.laatija %></td>
    </tr>
    <tr>
      <th><%= t('Luontiaika') %></th>
      <td><%= @currency.luontiaika %></td>
    </tr>
    <tr>
      <th><%= t('Muutospvm') %></th>
      <td><%= @currency.muutospvm %></td>
    </tr>
    <tr>
      <th><%= t('Muuttaja') %></th>
      <td><%= @currency.muuttaja %></td>
    </tr>
  </table>

  <% if update_access? %>
    <br/>

    <div class="actions">
      <% text = @currency.persisted? ? 'Tallenna' : 'Lisää' %>
      <%= f.submit t(text), disable_with: t('Tallentaa') + '...' %>
    </div>
  <% end %>
<% end %>
