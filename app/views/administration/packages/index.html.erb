<%= render "administration/header", text: t('.header') %>

<%= button_to t('.button_new'), new_package_path, method: :get if update_access? %>

<br /><br />

<table>
  <tr>
    <th><%= Package.human_attribute_name(:pakkaus) %></th>
    <th><%= Package.human_attribute_name(:pakkauskuvaus) %></th>
    <th><%= Package.human_attribute_name(:pakkausveloitus_tuotenumero) %></th>
    <th><%= Package.human_attribute_name(:erikoispakkaus) %></th>
    <th><%= Package.human_attribute_name(:korkeus) %></th>
    <th><%= Package.human_attribute_name(:leveys) %></th>
    <th><%= Package.human_attribute_name(:syvyys) %></th>
    <th><%= Package.human_attribute_name(:kayttoprosentti) %></th>
    <th><%= Package.human_attribute_name(:paino) %></th>
    <th><%= Package.human_attribute_name(:jarjestys) %></th>
  </tr>

  <% @packages.each do |p| %>
    <tr>
      <td><%= link_to p.pakkaus, edit_package_path(p.id) %></td>
      <td><%= p.pakkauskuvaus %></td>
      <td><%= p.pakkausveloitus_tuotenumero %></td>
      <td><%= p.erikoispakkaus %></td>
      <td><%= p.korkeus %></td>
      <td><%= p.leveys %></td>
      <td><%= p.syvyys %></td>
      <td><%= p.kayttoprosentti %></td>
      <td><%= p.paino %></td>
      <td><%= p.jarjestys %></td>
    </tr>
  <% end %>
</table>

<br />

<%= button_to t('.button_new'), new_package_path, method: :get if update_access? %>
