<h1 class="head">
  <%= t('.title') %>
</h1>

<hr/>

<% if notice %>
  <%= notice %>
  <br/><br/>
<% end %>

<%= form_tag revenue_expenditure_path, method: :get do %>
  <table>
    <tr>
      <th>
        <%= t('.period') %>
      </th>
      <td>
        <% options = options_for_select([['1 kk', 1],['2 kk', 2], ['3 kk', 3], ['6 kk', 6], ['12 kk', 12]], params[:period]) %>
        <%= select_tag :period, options %>
      </td>
      <td class='back'>
        <%= submit_tag t('.button_make') %>
      </td>
    </tr>
  </table>
<% end %>

<% if @data %>
  <br><br>

  <table>
    <tr>
      <th><%= t('.history_revenue') %></th>
      <th><%= t('.history_expenditure') %></th>
      <th><%= t('.overdue_accounts_receivable') %></th>
      <th><%= t('.overdue_accounts_payable') %></th>
    </tr>
    <tr>
      <td><%= @data[:history_salesinvoice] %></td>
      <td><%= @data[:history_purchaseinvoice] %></td>
      <td><%= @data[:overdue_accounts_receivable] %></td>
      <td><%= @data[:overdue_accounts_payable] %></td>
    </tr>
  </table>

  <br>

  <table id='rows_table'>
    <tr>
      <th><%= t('.week') %></th>
      <th><%= t('.revenue') %></th>
      <th><%= t('.expenditure') %></th>
      <th class='back'></th>
    </tr>

    <% @data[:weekly].each do |week| %>
      <%
      if @data[:weekly_alternative_expenditure][week[:week]].present?
        @data[:weekly_alternative_expenditure][week[:week]].each do |keyword|
          week[:purchases] += BigDecimal(keyword.selitetark_2)
        end
      end
      %>

      <tr>
        <td><%= week[:week] %></td>
        <td><%= week[:sales] %></td>
        <td><%= week[:purchases] %></td>
        <td class='back'>
          <%= button_tag '+', type: 'button', class: 'custom_expenditure_rows', id: week[:week_sanitized] %>
        </td>
      </tr>

      <tr class='custom_expenditure <%= week[:week_sanitized] %>'>
        <th colspan='3'>
          Vaihtoehtoiset menot
        </th>
        <th class='back'>
        </th>
      </tr>

      <% if @data[:weekly_alternative_expenditure][week[:week]].present? %>
        <% @data[:weekly_alternative_expenditure][week[:week]].each do |keyword| %>
          <tr class='custom_expenditure <%= week[:week_sanitized] %>'>
            <%= form_tag revenue_expenditure_update_path, method: :post do %>
              <%= hidden_field_tag :week, week[:week] %>
              <%= hidden_field_tag :period, params[:period] %>
              <%= hidden_field_tag :id, keyword.tunnus %>
                <td>
                  <%= label_tag :name, 'Nimi' %> <%= text_field_tag :name, keyword.selitetark %>
                </td>
                <td>
                  <%= label_tag :sum, 'Summa' %> <%= text_field_tag :sum, keyword.selitetark_2 %>
                </td>
                <td class='back'>
                  <%= submit_tag 'Muokkaa' %>
                </td>
            <% end %>
            <%= form_tag revenue_expenditure_delete_path, method: :post do %>
              <%= hidden_field_tag :id, keyword.tunnus %>
              <%= hidden_field_tag :period, params[:period] %>
              <td class='back'>
                <%= submit_tag 'Poista' %>
              </td>
            <% end %>
          </tr>
        <% end %>
      <% end %>

      <%= form_tag revenue_expenditure_save_path, method: :post do %>
        <%= hidden_field_tag :week, week[:week] %>
        <%= hidden_field_tag :period, params[:period] %>
        <tr class='custom_expenditure <%= week[:week_sanitized] %>'>
          <td>
            <%= label_tag :name, 'Nimi' %> <%= text_field_tag :name %>
          </td>
          <td>
            <%= label_tag :sum, 'Summa' %> <%= text_field_tag :sum %>
          </td>
          <td class='back'>
            <%= submit_tag 'Lisää' %>
          </td>
          <td class='back'>
          </td>
        </tr>
      <% end %>
      <tr class='custom_expenditure <%= week[:week_sanitized] %>'>
        <td class='back' colspan='4'>
          &nbsp;
        </td>
      </tr>
    <% end %>

    <tr>
      <th><%= t('.summary') %></th>
      <th><%= @data[:weekly_sum][:sales] %></th>
      <th><%= @data[:weekly_sum][:purchases] %></th>
      <th class='back'></th>
    </tr>
  </table>
<% end %>
