<%= link_to '« Palaa ohjelmaan: Muokkaa pakkausta', edit_package_path(@package) %>
<br />
<br />
<font class="head">Lisää pakkauskoodi</font>
<hr />

<%= form_for(@pc,
    url: { action: :create_package_code, id: @package.id }, html: { method: :post }) do |f| %>
  <table>
    <tr>
      <td class='back'>
        <table>
          <tr>
            <th><%= f.label :rahdinkuljettaja %></th>
            <td>
              <% options = options_for_select(@carrier_options, f.object.rahdinkuljettaja) %>
              <%= select_tag 'package_code[rahdinkuljettaja]', options, include_blank: false %>
            </td>
          </tr>
          <tr>
            <th><%= f.label :koodi %></th>
            <td><%= f.text_field :koodi %></td>
          </tr>
        </table>
      </td>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit 'Perusta pakkauskoodi', :disable_with => 'Tallentaa...' %>
  </div>
<% end %>
