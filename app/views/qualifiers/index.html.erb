    <th><%= Qualifier.human_attribute_name(:nimi) %></th>
    <th><%= Qualifier.human_attribute_name(:koodi) %></th>
    <th><%= Qualifier.human_attribute_name(:tyyppi) %></th>
    <th><%= Qualifier.human_attribute_name(:tunnus) %></th>
