<%= render "administration/header", text: t('reports.depreciation_difference.index.header') %>

<font class='head'>
  <%=l @report.start_date %> - <%=l @report.end_date %><br><br>
</font>

<%= return_link t('reports.depreciation_difference.index.header'), depreciation_difference_index_path %>

<br><br>

<table>

  <% @report.data.sum_levels.each do |sum_level| %>

    <tr>
      <th><%=t '.sum_level' %></th>
      <th><%=t '.account' %></th>
      <th><%=t '.commodity' %></th>
      <th><%=t '.procurement_date' %></th>
      <th><%=t '.procurement_amount' %></td>
      <th><%=t '.deprication' %></th>
      <th><%=t '.btl' %></td>
      <th><%=t '.difference' %></th>
    </tr>

    <% sum_level.accounts.each do |account| %>

      <% account.commodities.each do |commodity| %>
        <tr class='aktiivi'>
          <td><%= sum_level.name %></td>
          <td><%= account.name %></td>
          <td><%= commodity.name %></td>
          <td style='text-align: right;'><%=l commodity.procurement_date %></td>
          <td style='text-align: right;'><%= commodity.procurement_amount %></td>
          <td style='text-align: right;'><%= commodity.deprication %></td>
          <td style='text-align: right;'><%= commodity.btl %></td>
          <td style='text-align: right;'><%= commodity.difference %></td>
        </tr>
      <% end %>

      <tr>
        <th></th>
        <th><%= account.name %></th>
        <th></th>
        <th></th>
        <th style='text-align: right;'><%= account.procurement_amount_total %></th>
        <th style='text-align: right;'><%= account.deprication_total %></th>
        <th style='text-align: right;'><%= account.btl_total %></th>
        <th style='text-align: right;'><%= account.difference_total %></th>
      </tr>

    <% end %>

    <tr>
      <th><%= sum_level.name %></th>
      <th></th>
      <th></th>
      <th></th>
      <th style='text-align: right;'><%= sum_level.procurement_amount_total %></th>
      <th style='text-align: right;'><%= sum_level.deprication_total %></th>
      <th style='text-align: right;'><%= sum_level.btl_total %></th>
      <th style='text-align: right;'><%= sum_level.difference_total %></th>
    </tr>

    <tr>
      <td class='back'><br></td>
    </tr>

  <% end %>

  <tr>
    <td class='back'></td>
    <td class='back'></td>
    <td class='back'></td>
    <td class='back'></td>
    <th><%=t '.procurement_amount' %></td>
    <th><%=t '.deprication' %></th>
    <th><%=t '.btl' %></td>
    <th><%=t '.difference' %></th>
  </tr>

  <tr>
    <td class='back'></td>
    <td class='back'></td>
    <td class='back'></td>
    <td class='back'></td>
    <th style='text-align: right;'><%= @report.data.procurement_amount_total %></th>
    <th style='text-align: right;'><%= @report.data.deprication_total %></th>
    <th style='text-align: right;'><%= @report.data.btl_total %></th>
    <th style='text-align: right;'><%= @report.data.difference_total %></th>
  </tr>

</table>

<%= return_link t('reports.depreciation_difference.index.header'), depreciation_difference_index_path %>
