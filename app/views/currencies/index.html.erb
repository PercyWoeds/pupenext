<%= render 'header' %>

<%= button_to t('Uusi valuutta'), new_currency_path, method: :get %>

<br />

<%= form_tag currencies_path, method: :get do %>
<table>
  <tr>
    <th>
      <%= sortable 'nimi' %>
      <br />
      <%= text_field_tag :nimi, params[:nimi] %>
    </th>
    <th>
      <%= sortable 'kurssi' %>
      <br />
      <%= text_field_tag :kurssi, params[:kurssi] %>
    </th>
    <th class="back"><%= submit_tag t('Etsi') %></th>
  </tr>

  <% @currencies.each do |cur| %>
    <tr>
      <td><%= link_to cur.nimi, edit_currency_path(cur.id) %></td>
      <td><%= cur.kurssi %></td>
      <td class="back"></td>
    </tr>
  <% end %>
</table>
<% end %>

<br />

<%= button_to t('Uusi valuutta'), new_currency_path, method: :get %>
