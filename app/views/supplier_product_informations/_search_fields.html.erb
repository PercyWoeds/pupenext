        <%= label_tag :supplier_part_number,
                      SupplierProductInformation.human_attribute_name(:supplier_part_number) %>
      </th>
      <td>
        <%= search_field_tag :supplier_part_number, params[:supplier_part_number] %>
      </td>
    </tr>
    <tr>
      <th>
        <%= label_tag :manufacturer_part_number,
                      SupplierProductInformation.human_attribute_name(:manufacturer_part_number) %>
      </th>
      <td>
        <%= search_field_tag :manufacturer_part_number, params[:manufacturer_part_number] %>
      </td>
    </tr>
    <tr>
      <th>
        <%= label_tag :manufacturer_ean,
                      SupplierProductInformation.human_attribute_name(:manufacturer_ean) %>
      </th>
      <td>
        <%= search_field_tag :manufacturer_ean, params[:manufacturer_ean] %>
      </td>
      <td class="back">
        <%= submit_tag t('administration.accounts.index.button_search') %>
      </td>
    </tr>
  </table>
<% end %>
