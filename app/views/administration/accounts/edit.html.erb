<%= return_link("Tilikartta", accounts_path) %>

<br/>

<%= render "administration/header", text: t('.header') %>
<%= render 'form', account: @account,
                   levels: @levels,
                   qualifiers: @qualifiers,
                   oletus_alv_options: @oletus_alv_options %>

<% if @account.persisted? && update_access? %>
  <br/>

  <%= button_to(t('Poista tili'),
                account_path(@account.id),
                data: { confirm: t('Haluatko todella poistaa tämän tietueen?') },
                method: "delete") %>
<% end %>
