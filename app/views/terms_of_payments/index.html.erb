<font class="head">Maksuehdot</font>
<hr />

<%= link_to 'Uusi maksuehto', new_terms_of_payment_path %>

<% if @not_used %>
  <%= link_to 'N채yt채 aktiivit', terms_of_payments_path %>
<% else %>
  <%= link_to 'N채yt채 poistetut', not_used_terms_of_payments_path, action: :not_used %>
<% end %>

<br /><br />

<%= form_tag terms_of_payments_path, method: :get do %>
  <table>
    <tr>
      <th>
        Teksti
        <br />
        <%= text_field_tag :teksti, params[:teksti] %>
      </th>
      <th>
        Rel_pvm
        <br />
        <%= text_field_tag :rel_pvm, params[:rel_pvm] %>
      </th>
      <th>
        Abs_pvm
        <br />
        <%= date_field_tag :abs_pvm, params[:abs_pvm] %>
      </th>
      <th>
        Kassa_relpvm
        <br />
        <%= text_field_tag :kassa_relpvm, params[:kassa_relpvm] %>
      </th>
      <th>
        Kassa_abspvm
        <br />
        <%= date_field_tag :kassa_abspvm, params[:kassa_abspvm] %>
      </th>
      <th>
        Kassa_alepros
        <br />
        <%= text_field_tag :kassa_alepros, params[:kassa_alepros] %>
      </th>
      <th>
        Jarjestys
        <br />
        <%= text_field_tag :jarjestys, params[:jarjestys] %>
      </th>
      <th class="back"><%= submit_tag "Etsi" %></th>
    </tr>

    <% @terms_of_payments.each do |top| %>
      <tr>
        <td><%= top.teksti %></td>
        <td><%= top.rel_pvm %></td>
        <td><%= top.abs_pvm %></td>
        <td><%= top.kassa_relpvm %></td>
        <td><%= top.kassa_abspvm %></td>
        <td><%= top.kassa_alepros %></td>
        <td><%= top.jarjestys %></td>
        <td class="back"></td>
      </tr>
    <% end %>

  </table>
<% end %>
