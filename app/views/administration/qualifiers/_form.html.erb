<%= render "administration/form_errors", resource: @qualifier %>

<% # Since we don't want to use the 'real' url for STI models, we need this ugly hack (for now)
  if action_name == 'edit'
    url = qualifier_path @qualifier
    method = :put
  else
    url = qualifiers_path
    method = :post
  end
%>

<%= form_for :qualifier, url: url, method: method do |f| %>

  <table>

    <tr>
      <th><%= f.label :tyyppi %></th>
      <td><%= f.select :tyyppi, qualifier_tyyppi_options %></td>
    </tr>

    <tr>
      <th><%= f.label :nimi %></th>
      <td><%= f.text_field :nimi %></td>
    </tr>

    <tr>
      <th><%= f.label :koodi %></th>
      <td><%= f.text_field :koodi %></td>
    </tr>

    <tr>
      <th><%= f.label :isa_tarkenne %></th>
      <td><%= f.select :isa_tarkenne, isa_tarkenne_options, include_blank: true %></td>
    </tr>

    <tr>
      <th><%= f.label :kaytossa %></th>
      <td><%= f.select :kaytossa, kaytossa_options %></td>
    </tr>

    <%= render 'administration/resource_timestamps_and_users', resource: @qualifier %>

  </table>

  <%= render 'administration/actions', f: f %>

<% end %>
