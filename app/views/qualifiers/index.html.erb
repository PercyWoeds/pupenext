  <% @qualifiers.each do |q| %>
    <tr>
      <td><%= link_to q.nimi, edit_qualifier_path(q.id) %></td>
      <td><%= q.koodi %></td>
      <td><%= q.tyyppi %></td>
      <td><%= q.tunnus %></td>
    </tr>
  <% end %>
</table>

