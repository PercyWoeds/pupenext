<%= simple_form_for(@transport) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :customer %>
    <%= f.input :hostname %>
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.input :path %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
