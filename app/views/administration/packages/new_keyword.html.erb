<%= link_to '« Palaa ohjelmaan: Muokkaa pakkausta', edit_package_path(@package) %>
<br />
<br />
<font class="head">Lisää KIELIVERSIO</font>
<hr />

<%= form_for(@kw, url: {action: "create_keyword"}, html: {method: "post"}) do |f| %>
  <table>
    <tr>
      <td class='back'>
        <table>
          <tr>
            <th><%= f.label :kieli %></th>
            <td>
              <% options = options_for_select(@keyword_languages, f.object.kieli) %>
              <%= select_tag 'package_keyword[kieli]', options, include_blank: false %>
            </td>
          </tr>
          <tr>
            <th><%= f.label :selitetark %></th>
            <td><%= f.text_field :selitetark %></td>
          </tr>
          <tr>
            <th><%= f.label :jarjestys %></th>
            <td><%= f.text_field :jarjestys %></td>
          </tr>
        </table>
      </td>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit 'Perusta avainsana', :disable_with => 'Tallentaa...' %>
  </div>
<% end %>
