<%= render "administration/header", text: t('reports.commodity_financial_statements.index.header') %>

<font class='head'>
  <%=l @report.start_date %> - <%=l @report.end_date %><br><br>
</font>

<%= return_link t('reports.commodity_financial_statements.index.header'), commodity_financial_statements_path %>

<br><br>

<table>

  <% @report.data.sum_levels.each do |sum_level| %>
    <% sum_level.accounts.each do |account| %>
      <tr>
        <th colspan="3"><%= sum_level.name %></th>
      </tr>

      <tr>
        <th colspan="3"><%= account.name %></th>
      </tr>

      <tr class='aktiivi'>
        <td>Hankintameno</td>
        <td><%=l @report.start_date %></td>
        <td><%= account.procurement_amount_total %></td>
      </tr>

      <tr class='aktiivi'>
        <td>Kertynyt sumupoisto</td>
        <td><%=l @report.start_date %></td>
        <td><%= account.opening_deprication_total %></td>
      </tr>

      <tr class='aktiivi'>
        <td>Kertynyt sumupoisto</td>
        <td><%=l @report.end_date %></td>
        <td><%= account.closing_deprication_total %></td>
      </tr>

      <tr class='aktiivi'>
        <td>Kertynyt poistoero</td>
        <td><%=l @report.start_date %></td>
        <td><%= account.opening_difference_total %></td>
      </tr>

      <tr class='aktiivi'>
        <td>Kertynyt poistoero</td>
        <td><%=l @report.end_date %></td>
        <td><%= account.closing_difference_total %></td>
      </tr>

      <tr class='aktiivi'>
        <td>EVL -menojäännös</td>
        <td><%=l @report.end_date %></td>
        <td><%= account.closing_difference_total %></td>
      </tr>

      <tr class='aktiivi'>
        <td>Poistamaton osa</td>
        <td><%=l @report.end_date %></td>
        <td><%= account.closing_difference_total %></td>
      </tr>

      <tr>
        <td class='back'><br></td>
      </tr>
    <% end %>
  <% end %>

</table>

<%= return_link t('reports.commodity_financial_statements.index.header'), commodity_financial_statements_path %>
