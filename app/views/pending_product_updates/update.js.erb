<% if @product.errors.any? %>
  $('#notice').html("<%=j render 'administration/form_errors', resource: @product %><br><br>").show();
<% else %>
  $('#notice').append("<%=j render 'administration/notice', notice: t('.update_success') %>").show();

  setTimeout(function() {
    $('#notice').fadeOut().html('');
  }, 5000);
<% end %>
