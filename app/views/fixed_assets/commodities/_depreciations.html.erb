<%= render "administration/header", text: t('.header') %>

<table>
<tr><th><%= t('Tilikauden SUMU poistot') %></th></tr>
<tr><th><%= t('Poistoerät yhteensä') %></th><td><%= @commodity.depreciation_rows.sum(:summa) %></td></tr>
<tr><th><%= t('Poistoero yhteensä') %></th><td><%= @commodity.depreciation_difference_rows.sum(:summa) %></td></tr>
</table>

<br/>

<input type=button value=<%=t('Näytä/piilota') %> onclick="showHide('sumu_rows');">

<div id='sumu_rows' style="display: none;">
  <br/><br/>

  <table>
    <tr>
      <th><%= t('Tili') %></th>
      <th><%= t('Summa') %></th>
      <th><%= t('Pvm') %></th>
      <th><%= t('Selite') %></th>
    </tr>
    <% @commodity.voucher.rows.each do |vourow| %>
      <tr>
        <td><%= vourow.tilino  %></td>
        <td><%= vourow.summa %></td>
        <td><%= vourow.tapvm %></td>
        <td><%= vourow.selite %></td>
      </tr>
    <% end %>
  </table>

</div>
