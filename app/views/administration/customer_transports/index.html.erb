<%= render "administration/header", text: t('administration.transports.index.header') %>

<%= button_to_new 'transport', new_customer_transport_path %>

<hr>

<table>
  <thead>
    <tr>
      <th><%= Customer.model_name.human %></th>
      <th><%= Transport.human_attribute_name(:hostname) %></th>
      <th><%= Transport.human_attribute_name(:username) %></th>
      <th><%= Transport.human_attribute_name(:password) %></th>
      <th><%= Transport.human_attribute_name(:path) %></th>
    </tr>
  </thead>

  <tbody>
    <% @transports.each do |transport| %>
      <tr>
        <td><%= link_to transport.transportable.nimi, edit_customer_transport_path(transport) %></td>
        <td><%= transport.hostname %></td>
        <td><%= transport.username %></td>
        <td><%= transport.password %></td>
        <td><%= transport.path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to_new 'transport', new_customer_transport_path %>
