<%= return_link t('administration.custom_attributes.index.header'),
    custom_attributes_path(table_alias_set: (@custom_attribute.alias_set_name || params[:table_alias_set])) %>

<br/>

<%= render "administration/header", text: t('administration.custom_attributes.edit.header') %>
<%= render 'form' %>

<% if @custom_attribute.persisted? %>
  <br/>

  <%= button_to(t('.button_remove'),
                custom_attribute_path(@custom_attribute),
                data: { confirm: t('administration.custom_attributes.edit.confirm_remove') },
                method: "delete") %>
<% end %>
