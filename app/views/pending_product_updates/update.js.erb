<% if @product.errors.any? %>
  message = "<font class='error'><%= @product.errors.full_messages.join('<br>') %></font>";
<% else %>
  message = "<font class='ok'><%= t('.update_success') %></font>";
  pending = $('<%= "#pending_updates_#{@product.id}" %>');
  nested_fields = pending.find('div.nested-fields');
  count = nested_fields.length;

  nested_fields.find('input:checkbox:checked').each(function() {
    $(this).parent().remove();
    count--;
  });

  if (!count) pending.siblings('input.submit').hide();
<% end %>

pending.find('div.notifications').html(message + "<br><br>");

