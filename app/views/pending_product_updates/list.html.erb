<%= return_link t('pending_product_updates.index.header'), pending_product_updates_path %>

<br><br>

<table>

<tr>
  <th>
    <%= t('.sku') %>
  </th>
  <th>
    <%= t('.label') %>
  </th>
</tr>

<% @products.each do |product| %>
  <tr>
    <td>
      <%= product.tuoteno %>
    </td>
    <td>
      <%= product.nimitys %>
    </td>
  </tr>

  <tr>
    <td colspan='2'>
      <% product.pending_updates.build %>

      <%= form_for product do |product_form| %>
        <%= fields_for product.pending_updates do |pending_fields| %>
          <%= pending_fields.text_field :key %>
        <% end %>

        <%= product_form.submit %>
      <% end %>
    </td>
  </tr>
<% end %>

</table>
