<br />
<br />
<font class="head">Muokkaa kieliversiota</font>
<hr />

<%= form_for(@pc, url: {action: "update_package_code"}, html: {method: "post"}) do |f| %>
    <table>
      <tr>
        <td class='back'>
          <table>
            <tr>
              <th><%= f.label :rahdinkuljettaja %></th>
              <td>
                <% options = options_for_select(@carrier_options, f.object.rahdinkuljettaja) %>
                <%= select_tag 'package_code[rahdinkuljettaja]', options, include_blank: false %>
              </td>
            </tr>
            <tr>
              <th><%= f.label :koodi %></th>
              <td><%= f.text_field :koodi %></td>
            </tr>
            <tr>
              <th><%= f.label :laatija %></th>
              <td><%= @pc.laatija %></td>
            </tr>
            <tr>
              <th><%= f.label :luontiaika %></th>
              <td><%= @pc.luontiaika.utc.getlocal.strftime("%Y-%m-%d %H:%M:%S") %></td>
            </tr>
            <tr>
              <th><%= f.label :muutospvm %></th>
              <td><%= @pc.muutospvm.utc.getlocal.strftime("%Y-%m-%d %H:%M:%S") %></td>
            </tr>
           <tr>
            <th><%= f.label :muuttaja %></th>
            <td><%= @pc.muuttaja %></td>
          </tr>
        </table>
      </td>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit 'Tallenna pakkauskoodi', :disable_with => 'Tallentaa...' %>
  </div>
<% end %>
